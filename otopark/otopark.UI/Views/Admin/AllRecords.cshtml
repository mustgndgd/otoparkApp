@using Microsoft.EntityFrameworkCore.Storage
@model otopark.UI.Models.Admin.AllRecordsModel
@{
    Layout = "_AdminLayout";
}
<h3> Giriş çıkış yapmış araçlar. </h3>
<div class="container">  
    <br />  
    <div style="width:90%; margin:0 auto;">  
        <table id="demoGrid" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">  
            <thead>  
            <tr>  
                <th>Araç Plakası</th>  
                <th>Giriş Saati</th>      
                <th>Çıkış Saati</th>  
                <th>Toplam Süre</th>  
                <th>Toplam Ücret</th>  
            </tr>  
            </thead>  
            <tbody>
                @foreach (var records in Model.records)
                {
                    <tr>
                        <td>@records.plate</td>
                        <td>@records.loginTime</td>
                        <td>@records.exitTime</td>
                        <td>@records.duration</td>
                        <td>@records.totalPrice</td>
                    </tr>
                }
            </tbody>
        </table>  
    </div>  
</div>  

@section statics
{
    <script >
        $(document).ready( 
            function() {
            $('#table').DataTable({
                "paging": true,
                "lengthChange": false,
                "searching": false,
                "ordering": true,
                "info": true,
                "autoWidth": false,
                "responsive": true
            });
        });
    </script>

}